doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
    body
        header.main-header
            nav.main-header-nav
                ul.main-header-ul
                    li.main-header-li 
                        a.active(href="/") Shop
                    li.main-header-li 
                        a(href="/admin/add-product") Add Product
        main 
            if prods.length > 0
                .grid
                    each product in prods
                        article.card.product-item
                            header.card-header
                                h1.prod-title Great Book #{product.title}
                            .card-image
                                img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book")
                            .card-content
                                h2.prod-price $19.99
                                p.prod-description A very interesting book about so many even more interesting
                            .card-actions
                                button.button Add to cart
            else
                h1 No products
