extends layout/main-layout.pug

block style 
    link(rel="stylesheet", href="/css/main.css")

block content 
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card-header
                            h1.prod-title #{product.title}
                        .card-image
                            img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book")
                        .card-content
                            h2.prod-price $19.99
                            p.prod-description A very interesting book about so many even more interesting
                        .card-actions
                            button Add to cart
        else
            h1 No products
