<header class="main-header">
    <nav class="main-header-nav">
        <ul class="main-header-ul">
            <li class="main-header-li"><a class="<%= path==='/' ? 'active' : ''%>" href="/">Shop</a></li>
            <li class="main-header-li"><a class="<%= path==='/products' ? 'active' : ''%>" href="/products">Products</a></li>
            <% if (isAuthenticated) { %>
            <li class="main-header-li"><a class="<%= path==='/cart' ? 'active' : ''%>" href="/cart">Cart</a></li>
            <li class="main-header-li"><a class="<%= path==='/orders' ? 'active' : ''%>" href="/orders">Orders</a></li>
                <li class="main-header-li"><a class="<%= path==='/admin/add-product' ? 'active' : ''%>" href="/admin/add-product">Add Product</a></li>
                <li class="main-header-li"><a class="<%= path==='/admin/products' ? 'active' : ''%>" href="/admin/products">Admin Products</a></li>       
            <% } %>
        </ul>
        <ul class="main-header-ul">
            <% if (!isAuthenticated) { %>
                <li class="main-header-li"><a class="<%= path==='/login' ? 'active' : ''%>" href="/login">Log In</a></li>
                <li class="main-header-li"><a class="<%= path==='/signup' ? 'active' : ''%>" href="/signup">Sign Up</a></li> 
            <% } else { %>
                <li class="main-header-li">
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="logout-btn">Log Out</button>
                    </form>
                </li>
            <% } %>
        </ul>
    </nav>
</header>