<%- include('contain/head.ejs') %>
<body>
    <%- include('contain/nav.ejs') %>
    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card-header">
                            <h1 class="prod-title"><%= product.title %></h1>
                        </header>
                        <div class="card-image">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="A Book">
                        </div>
                        <div class="card-content">
                            <h2 class="prod-price">$19.99</h2>
                            <p class="prod-description">A very interesting book about so many even more interesting</p>
                        </div>
                        <div class="card-action">
                            <button>Add to cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found</h1>
        <% } %>
    </main>
<%- include('contain/end.ejs') %>