<%- include('../contain/head.ejs') %>
<body>
    <%- include('../contain/nav.ejs') %>
    <main class="centered">
        <h1><%= product.title %></h1>
        <hr>
        <div>
            <img class="img" src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <h2>$<%= product.price %></h2>
        <p><%= product.description %></p>
        <% if (isAuthenticated) { %>
            <%- include('../contain/add-to-cart.ejs', {product: product}) %>
        <% } %>
    </main>
    <%- include('../contain/end.ejs') %>